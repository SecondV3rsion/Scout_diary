<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/flag_red"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:src="@drawable/ic_red_flag"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/flag_margin"/>

    <ImageView
        android:id="@+id/flag_green"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:src="@drawable/ic_green_flag"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/flag_margin"/>

    <ImageView
        android:id="@+id/flag_blue"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:src="@drawable/ic_blue_flag"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/flag_margin"/>

    <ImageView
        android:id="@+id/flag_purple"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:src="@drawable/ic_purple_flag"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/flag_margin"/>

    <ImageView
        android:id="@+id/flag_yellow"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:src="@drawable/ic_orange_flag"
        android:visibility="gone" />


</LinearLayout>
